<%- include('shared/header.ejs') %>
    <div class="form">
        <div id="signup">
            <h1>Sign Up for Free</h1>

            <form action="/handleSignUp" method="post">
                <div class="top-row">
                    <div class="field-wrap">
                        <label>First Name<span class="req">*</span></label>
                        <input value="<%= oldInputs.fname %>" name="fname" type="text" />
                    </div>

                    <div class="field-wrap">
                        <label> Last Name<span class="req">*</span> </label>
                        <input value="<%= oldInputs.lname %>" name="lname" type="text" />
                    </div>
                </div>

                <div class="field-wrap">
                    <label> Email Address<span class="req">*</span> </label>
                    <input value="<%= oldInputs.email %>" name="email" type="email" />
                    <% if (errors.find(e=>e.param=='exists')) { %>
                        <div class="alert alert-danger my-3 text-center">
                            Email already exists
                        </div>
                        <% } %>
                </div>

                <div class="field-wrap">
                    <label> Set A Password<span class="req">*</span> </label>
                    <input value="<%= oldInputs.password %>" name="password" type="password" />
                </div>
                <div class="field-wrap">
                    <label> Reset A Password<span class="req">*</span> </label>
                    <input value="<%= oldInputs.rePassword %>" name="rePassword" type="password" />

                    <% if (errors.find(e=>e.param=='rePassword')) { %>
                        <div class="alert alert-danger">
                            password 8lt
                        </div>
                        <% } %>
                </div>
                <button type="submit" class="button button-block">Get Started</button>
            </form>
        </div>
    </div>


    <%- include('shared/footer.ejs') %>